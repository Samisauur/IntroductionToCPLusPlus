// Pre:     None  
// Post:    The program will print the number of kilograms the user can lift.

#include <iostream>

using namespace std;

int main() {

    int k;

    cout << "Many pounds can you lift?" << endl;
    cin >> k;
    cout << "Wow. That means you can lift " << (k/2.20462) << " kilograms." << endl;

    return 0;
}
